<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    tools:context="com.miner.circleview.MainActivity">

    <com.miner.circleview.view.CircleImageView
        android:id="@+id/circleImgView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#fff"
        android:padding="10dp"
        app:border_width="6dp"
        app:border_color="#ffff00"
        android:src="@mipmap/girl" />

    <com.miner.circleview.view.CircleImageView
        android:id="@+id/circleImgView02"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#000"
        android:padding="10dp"
        app:border_color="#0ff"
        app:border_width="6dp"
        android:src="@mipmap/girl" />

</LinearLayout>
